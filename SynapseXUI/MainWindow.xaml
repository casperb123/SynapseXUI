<mah:MetroWindow x:Class="SynapseXUI.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:SynapseXUI"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 mc:Ignorable="d"
                 Title="{Binding Path=SynapseStatus, StringFormat='Synapse X UI{0}'}"
                 Height="500"
                 Width="800"
                 MinHeight="500"
                 MinWidth="800"
                 Closing="MetroWindow_Closing">
    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button x:Name="buttonAttach"
                    Content="Attach"
                    Cursor="Hand"
                    Click="ButtonAttach_Click" />
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>

    <Grid>
        <mah:MetroAnimatedSingleRowTabControl x:Name="tabControlMain"
                                              mah:TabControlHelper.Underlined="SelectedTabItem"
                                              Padding="5"
                                              SelectionChanged="TabControlMain_SelectionChanged">
            <TabItem Header="Editor">
                <UserControl x:Name="userControlEditor" />
            </TabItem>
            <TabItem x:Name="tabItemScriptHub"
                     Header="Script Hub">
                <UserControl x:Name="userControlScriptHub" />
            </TabItem>
            <TabItem Header="Options">
                <UserControl x:Name="userControlOptions" />
            </TabItem>
        </mah:MetroAnimatedSingleRowTabControl>
    </Grid>
</mah:MetroWindow>
