<UserControl x:Class="SynapseXUI.UserControls.OptionsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SynapseXUI.UserControls"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        
        <GroupBox Header="Synapse X Options"
                  Margin="0,0,5,0">
            <StackPanel>
                <mah:ToggleSwitch Header="Unlock FPS"
                                  OnContent="Enabled"
                                  OffContent="Disabled" />
                <mah:ToggleSwitch Header="Auto Launch"
                                  OnContent="Enabled"
                                  OffContent="Disabled" />
                <mah:ToggleSwitch Header="Auto Attach"
                                  OnContent="Enabled"
                                  OffContent="Disabled" />
                <mah:ToggleSwitch Header="Internal UI"
                                  OnContent="Enabled"
                                  OffContent="Disabled" />
                <mah:ToggleSwitch Header="Discord Auto Join"
                                  OnContent="Enabled"
                                  OffContent="Disabled" />
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Application Options"
                  Grid.Column="1"
                  Margin="5,0">
            <StackPanel>
                <mah:ToggleSwitch Header="Top Most"
                                  OnContent="Enabled"
                                  OffContent="Disabled" />
                <mah:ToggleSwitch Header="Tab Closing Prompt"
                                  OnContent="Enabled"
                                  OffContent="Disabled" />
                <mah:ToggleSwitch Header="Clear Editor Prompt"
                                  OnContent="Enabled"
                                  OffContent="Disabled" />
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Theme Options"
                  Grid.Column="2"
                  Margin="5,0,0,0">
            <StackPanel>
                <StackPanel>
                    <Label Content="Application Theme"
                           HorizontalContentAlignment="Center" />
                    <ComboBox/>
                </StackPanel>
                <StackPanel>
                    <Label Content="Application Color"
                           HorizontalContentAlignment="Center" />
                    <ComboBox />
                </StackPanel>
                <StackPanel>
                    <Label Content="Editor Theme"
                           HorizontalContentAlignment="Center" />
                    <ComboBox />
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
