<UserControl x:Class="SynapseXUI.UserControls.OptionsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SynapseXUI.UserControls"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:viewmodels="clr-namespace:SynapseXUI.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:OptionsUserControlViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <GroupBox Header="Application Options"
                  Margin="0,0,2.5,0">
            <StackPanel Margin="5">
                <mah:ToggleSwitch Header="Unlock FPS"
                                  OnContent="Enabled"
                                  OffContent="Disabled"
                                  IsOn="{Binding Path=UnlockFps}"
                                  Toggled="ToggleSwitchSxOptions_Toggled" />
                <mah:ToggleSwitch Header="Auto Launch"
                                  OnContent="Enabled"
                                  OffContent="Disabled"
                                  IsOn="{Binding Path=AutoLaunch}"
                                  Toggled="ToggleSwitchSxOptions_Toggled" />
                <mah:ToggleSwitch Header="Auto Attach"
                                  OnContent="Enabled"
                                  OffContent="Disabled"
                                  IsOn="{Binding Path=AutoAttach}"
                                  Toggled="ToggleSwitchSxOptions_Toggled" />
                <mah:ToggleSwitch Header="Internal UI"
                                  OnContent="Enabled"
                                  OffContent="Disabled"
                                  IsOn="{Binding Path=InternalUi}"
                                  Toggled="ToggleSwitchSxOptions_Toggled" />
                <mah:ToggleSwitch Header="Top Most"
                                  OnContent="Enabled"
                                  OffContent="Disabled"
                                  IsOn="{Binding Path=TopMost}"
                                  Toggled="ToggleSwitchSxOptions_Toggled" />
                <mah:ToggleSwitch Header="Clear Editor Prompt"
                                  OnContent="Enabled"
                                  OffContent="Disabled"
                                  IsOn="{Binding Path=ClearEditorPrompt}"
                                  Toggled="ToggleSwitchSxOptions_Toggled" />
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Theme Options"
                  Grid.Column="1"
                  Margin="2.5,0,0,0">
            <StackPanel Margin="5">
                <StackPanel>
                    <Label Content="Application Theme"
                           HorizontalContentAlignment="Center" />
                    <ComboBox x:Name="comboBoxTheme"
                              SelectedItem="{Binding Path=ApplicationTheme}"
                              SelectionChanged="ComboBoxOptions_SelectionChanged" />
                </StackPanel>
                <StackPanel>
                    <Label Content="Application Color"
                           HorizontalContentAlignment="Center" />
                    <ComboBox x:Name="comboBoxColor"
                              SelectedItem="{Binding Path=ApplicationColor}"
                              SelectionChanged="ComboBoxOptions_SelectionChanged" />
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
